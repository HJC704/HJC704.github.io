<div class="recipes">
  <h2><a href="{{ '/recipes/' | relative_url }}" style="color: inherit">Recipes</a></h2>
  <p>When I'm not diving into research, I love exploring Chinese cuisine in the kitchen!</p>

  <div class="row">
    {% for recipe in site.data.recipes limit: 3 %}
      <div class="col-sm-6 col-md-4 mb-3">
        <div class="card h-100">
          {% if recipe.image %}
            <img
              src="{{ '/assets/img/recipes/' | append: recipe.image | relative_url }}"
              class="card-img-top"
              alt="{{ recipe.name }}"
              style="height: 200px; object-fit: cover;"
            >
          {% endif %}
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">{{ recipe.name }}</h5>
            <p class="card-text">{{ recipe.description }}</p>
            <div class="mt-auto">
              <small class="text-muted">
                <i class="fas fa-clock"></i> {{ recipe.time }} | <i class="fas fa-signal"></i> {{ recipe.difficulty }}
              </small>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

  {% if site.data.recipes.size > 3 %}
    <div class="text-center mt-3">
      <a href="{{ '/recipes/' | relative_url }}" class="btn btn-outline-primary">View All Recipes</a>
    </div>
  {% endif %}
</div>
